<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/white" />

    <!-- Set the border width and color (optional, you can remove this if no border is needed) -->
    <stroke
        android:width="1dp"
        android:color="@color/purple_primary_color" />

    <!-- Set the corner radius for the rounded edges -->
    <corners android:radius="16dp" />

    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
