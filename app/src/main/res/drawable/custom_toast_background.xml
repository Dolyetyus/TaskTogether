<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:right="2dp" android:left="2dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#1A000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/purple_primary_color"
                android:endColor="@color/purple_dark_color"
                android:angle="45" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
